<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/light_blue"
    android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layoutDialog"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:paddingLeft="@dimen/universal_padding"
            android:paddingRight="@dimen/universal_padding">

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/custom_dialog_title"
            android:layout_marginTop="15dp"
            android:paddingStart="@dimen/universal_padding"
            android:paddingEnd="@dimen/universal_padding"
            android:gravity="start"
            android:textColor="@color/white"
            android:textSize="22sp" />
        </LinearLayout>

</LinearLayout>