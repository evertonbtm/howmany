<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_hint_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/card_element_margin"
            android:layout_marginStart="@dimen/card_element_margin"
            android:layout_marginTop="@dimen/card_element_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/tag_description"/>

            <EditText
                android:id="@+id/addTagEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/universal_padding"
                android:textColorHint="?attr/colorAccent"
                android:autofillHints=""
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_hint_unitytype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/card_element_margin"
            android:layout_marginStart="@dimen/card_element_margin"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_hint_tag">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start"
                android:text="@string/tag_unity"/>
            <Spinner
                android:id="@+id/addUnityTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColorHint="?attr/colorAccent"
                android:spinnerMode="dropdown"/>

        </LinearLayout>

        <LinearLayout
        android:id="@+id/ll_hint_unitymultiplier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/card_element_margin"
        android:layout_marginStart="@dimen/card_element_margin"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_hint_unitytype">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start"
            android:text="@string/tag_unity_multiplier"/>
        <Spinner
            android:id="@+id/addUnityMultSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColorHint="?attr/colorAccent"
            android:spinnerMode="dropdown"/>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
